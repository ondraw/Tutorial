from django.shortcuts import render
from django.template.context_processors import request
from django.template import loader
from django.http.response import HttpResponse
from django.http import Http404
from .models import Question

def index(request):
    #질문 객체의 pub_date로 정렬 한 후 리스트 0~5까지만 보여준다.
    latest_question_list = Question.objects.order_by('-pub_date')[:5]
    
    template = loader.get_template('songs/index.html')
    context = {'latest_question_list': latest_question_list}
    return HttpResponse(template.render(context, request))

    #output = ', '.join([q.question_text for q in latest_question_list])
    #return HttpResponse(output)



def detail(request, question_id):
    try:
        question = Question.objects.get(pk=question_id)
    except Question.DoesNotExist:
        raise Http404("질문 페이지가 존재 하지 않습니다.")
    return render(request, 'songs/detail.html', {'question': question})


def results(request, question_id):
    response = "질문의 결과 입니다. %s."
    return HttpResponse(response % question_id)

def vote(request, question_id):
    return HttpResponse("질문 결과의 통계입니다. %s." % question_id)